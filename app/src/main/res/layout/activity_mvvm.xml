<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel" type="com.fisincorporated.mvvm.MvvmViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/activity_station_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.fisincorporated.mvc.MvvmActivity">

        <TextView
            android:id="@+id/activity_station_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@{viewModel.stationName}"
            tools:text="StationName"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_station_switches_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_station_title"
            android:layout_marginTop="24dp"
            android:paddingLeft="@dimen/activity_horizontal_margin" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_station_log_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/activity_station_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/activity_station_log_label"
                android:hint="@{viewModel.logHint}"
                tools:hint="Enter station log here"
                android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
                android:paddingLeft="@dimen/activity_horizontal_margin" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/activity_stations_save_log_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_station_log"
            android:layout_marginTop="25dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@{viewModel.bigButtonName}"
            android:onClick="@{viewModel::onClickSaveLogButton}"
            />

    </LinearLayout>
</layout>